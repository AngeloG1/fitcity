.avatar {
  width: 125px;
  border-radius: 100px;
  padding: 3px;
  border: 4px solid black;
}

ul.dashboard-head {
  padding-left: 0;
  list-style: none;
}

.dashboard-head li,
.dashboard-head img {
  display: inline-block;
  padding: 10px;
  font-family: 'Oswald', sans-serif;
  font-size: 30px;
}

.button {
  background: none;
  color: black;
  font-family: 'Oswald', sans-serif;
  font-size: 24px;
  padding: 10px;
  border-radius: 40px;
  border: 4px solid #2c2c2e;
}

.button:focus {
  outline: none;
}

.button:hover {
  background: #2c2c2e;
  color: white;
  border: 4px solid #2c2c2e;
}

ul.share-buttons {
  margin-left: 10%;
  list-style: none;
}

.share-buttons li {
  display: inline-block;
  margin-right: 20px;
}

.dashboard-section {
  width: 80%;
  height: auto;
  margin: 0 auto;
}

.dashboard-section p {
  font-size: 36px;
  line-height: 42px;
  margin-bottom: 20px;
}

