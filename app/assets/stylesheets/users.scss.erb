#walks {
  background-color: #05A9F4;
  min-height: 600px;
  border-top-left-radius: 50px;
  border-top-right-radius: 50px;
  margin-bottom: 40px;
}

.miles-progress {
  position: relative;
  float: left;
  height: 460px;
  width: 172px;
  margin: 40px 20px;
}

.walk {
  position: absolute;
  z-index: 1;
  height: 100.4%;
  width: 100%;
  bottom: -1px;
  left: 0px;
  background-image: url(<%= asset_path('manhattan-blue.png') %>);
  background-position: 50% 50%;
  background-size: cover;
}

.walk-bar-left {
  position: absolute;
  z-index: 0;
  height: 0%;
  width: 47%;
  bottom: 0px;
  left: 1px;
  background: red;
  opacity: 0.55;
}

.walk-bar-right {
  position: absolute;
  z-index: 0;
  height: 0%;
  width: 51.8%;
  top: 0px;
  right: 1px;
  background: red;
  opacity: 0.55;
}

#buildings {
  background-color: #8ADF18;
  /*background-color: #8DE12B;*/
  min-height: 600px;
  border-top-left-radius: 50px;
  border-top-right-radius: 50px;
  margin-bottom: 40px;
}

.floors-progress {
  position: relative;
  float: left;
  height: 460px;
  width: 144px;
  margin: 40px 20px;
/*  top: 4%;
  height: 96%;
  width: 60%;*/
}

.building {
  position: absolute;
  z-index: 1;
  height: 100%;
  width: 100%;
  bottom: 0px;
  left: 0px;
  background-image: url(<%= asset_path('ESB-final.png') %>);
  background-position: 50% 50%;
  background-size: cover;
}

